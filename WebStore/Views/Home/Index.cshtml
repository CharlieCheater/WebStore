</div>

@section Scripts {
	<script>
		const VueApp = {
			data() {
				return {
					orders: [],
					pacients: [],
					searchInput: '',
				}
			},
			async mounted() {
				await this.getPacients();
			},
			methods: {
				getPacients: async function () {
					let th = this;
					axios.post('/Home/GetPacients', th.searchInput).then((response) => {
						th.pacients = response.data;
						console.log(th.pacients[0]);
					});
				}
			},
		}
		Vue.createApp(VueApp).mount("#vueapp");
	</script>
}