@{
	ViewData["Title"] = "Home Page";
}

<div class="" id="vueapp">
	<div class="row w-100">
		<div class="card w-100">
			<div class="card-header">
				<h3 class="card-title">Заполнение мед карты</h3>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col">
						<label>Фамилия *</label>
						<input class="form-control" />
					</div>
					<div class="col">
						<label>Имя *</label>
						<input class="form-control" />
					</div>
					<div class="col">
						<label>Отчество</label>
						<input class="form-control" />
					</div>
					<div class="col">
						<label>Дата рождения *</label>
						<input class="form-control" type="date" />
					</div>
				</div>
				<div class="row">
					<div class="col col-9">
						<label>Адрес *</label>
						<input class="form-control" />
					</div>
					<div class="col">
						<label>Номер тел.</label>
						<input class="form-control" />
					</div>
				</div>
				<div class="row">
					<div class="col col-9">
						<label>Анамез</label>
						<textarea rows="4" class="form-control">

						</textarea>
					</div>
					<div class="col">
						<label>Место работы</label>
						<input class="form-control" />
						<label>Должность</label>
						<input class="form-control" />
					</div>
				</div>
			</div>
			<div class="card-footer text-center">
				<button class="btn btn-success">Заполнить</button>
			</div>
		</div>
	</div>
	<div class="row w-100">
		<div class="card w-100">
			<div class="card-header">
				<h3 class="card-title">Заполнение мед карты</h3>
			</div>
			<div class="card-body">
				<input v-model="searchInput" class="form-control" placeholder="Поиск пациента" v-on:change="getPacients" />
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<td>№ п/п</td>
							<td>Фамилия</td>
							<td>Имя</td>
							<td>Отчество</td>
							<td>Дата рождения</td>
							<td>Номер тел</td>
						</tr>
					</thead>
					<tbody>
						<template v-for="(pacient, index) in pacients" :key="pacient.id">
							<tr>
								<td>{{index + 1}}</td>
								<td>{{pacient.firstName}}</td>
								<td>{{pacient.surName}}</td>
								<td>{{pacient.patronymic}}</td>
								<td>{{pacient.birthday}}</td>
								<td>{{pacient.phone}}</td>
							</tr>
						</template>
					</tbody>
				</table>
			</div>
		</div>
	</div>
